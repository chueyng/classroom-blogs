<div class="page-header">
  <h1><%= @classroom %> class</h1>
</div>
    <% if @current_user.present? && @current_user.role == 'teacher' %>
        <p>
            <%= link_to t('.new', :default => t("helpers.links.make_a_new_post")),new_post_path,:class => 'btn btn-warning'%>
        </p>        
    <% end %>
    <% if @posts_by_user[0].nil? %>
            <p>No blog is created at this moment. Please contact your respective teacher.</p>
    <% else %>
        <% @posts_by_user.each do |post| %>
            <% unless !post.owner?(@current_user) && post.teacher?(@current_user) %>
                <h3> <%= link_to post.title, post_path(post) %> </h3>
                <h6> Posted on <%= post.created_at.strftime '%A, %B %e, %Y' %> </h6>
                <br>
                <p> <%= post.body %> </p>
                <p> <%= image_tag(post.image) unless post.image.nil? %> </p>
                <p><%= link_to t('.comment', :default => t("helpers.links.leave_comment")), (@current_user.present? ? post_path(post) : login_path), :class => 'btn btn-info btn-xl' %>
                </p>
                <p>&nbsp;</p>
            <% end %>
            <% if post.owner?(@current_user) && post.teacher?(@current_user) %>
                <p>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-default btn-xs' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },:class => 'btn btn-xs btn-danger' %>
                </p>
            <% end %>
        <% end %>
    <% end %> 